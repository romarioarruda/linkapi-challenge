    "eslint": "^7.16.0",
    "eslint-config-vtex": "^12.9.3",
    "husky": "^7.0.4",
    "lint-staged": "^10.5.3",
    "node-dev": "^7.4.3",
    "prettier": "2.6.2",
    "ts-node": "^10.8.0",
    "typescript": "^4.4.4"
