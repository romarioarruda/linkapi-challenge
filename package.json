  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "prepare": "husky install",
    "check": "prettier --check node/**/*.ts",
    "start": "node-dev src/index.ts",
    "prod": "ts-node src/index.ts"
  },
  "author": "Rom√°rio Arruda <romarioarruda98@gmail.com>",
